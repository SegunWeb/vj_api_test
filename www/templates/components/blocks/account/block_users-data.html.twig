    <form class="user-form">
        <div class="form-group form-user">
            <label class="title-text__user" for="u-name">{{ 'front.full_name'|trans }}</label>
            <input class="form-control" type="text" id="u-name" name="fullName" placeholder="{{ 'front.full_name'|trans }}" value="{{ app.user.fullName }}" required="required">
            <p class="desc-text__user save">{{ 'front.save'|trans }}</p>
        </div>
        <div class="form-group form-user">
            <label class="title-text__user" for="u-phone">{{ 'front.phone'|trans }}</label>
            <input class="form-control" type="text" id="u-phone" name="phone" placeholder="{{ 'front.phone'|trans }}" value="{{ app.user.phone }}" required="required">
            <p class="desc-text__user save">{{ 'front.save'|trans }}</p>
        </div>
        <div class="form-group form-user">
            <label class="title-text__user" for="u-mail">{{ 'front.email'|trans }}</label>
            <input class="form-control" type="email" id="u-mail" name="email" placeholder="{{ 'front.email'|trans }}" value="{{ app.user.email }}" required="required">
            <p class="desc-text__user save">{{ 'front.save'|trans }}</p>
        </div>
