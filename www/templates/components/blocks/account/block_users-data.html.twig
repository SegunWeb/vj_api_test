        <div class="form-group form-user">
            <label class="title-text__user" for="u-pass">{{ 'front.password'|trans }}</label>
            <input class="form-control" type="password" id="u-pass" placeholder="{{ 'front.password'|trans }}" required="required" disabled>
            <p class="desc-text__user change-pass" style="opacity: 1;">{{ 'front.change_password'|trans }}</p>
        </div>
        <div class="change-pass-box">
            <div class="form-group form-user">
                <label class="title-text__user" for="u-old">{{ 'front.old_password'|trans }}</label>
                <input class="form-control" type="password" id="u-old" name="oldPassword" placeholder="{{ 'front.old_password'|trans }}" required="required">
            </div>
            <div class="form-group form-user">
                <label class="title-text__user" for="u-new">{{ 'front.new_password'|trans }}</label>
                <input class="form-control" type="password" id="u-new" name="password" placeholder="{{ 'front.new_password'|trans }}" required="required">
                <p class="desc-text__user save-password">{{ 'front.save'|trans }}</p>
            </div>
        </div>
    </form>
